---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
import ArtistCard from "../components/ArtistCard.astro";
import WhatIsPixel from "../components/WhatIsPixel.astro";
import viola_rama from "../assets/images/viola_rama.png";
import bradon_morse from "../assets/images/bradon_morse.png";
import danielle from "../assets/images/danielle.png";
import Billedegalleri from "../components/Billedegalleri.astro";
import Pixel from "../components/Pixel.astro";
import Herosection from "../components/Herosection.astro";
import ApartofPixel from "../components/ApartofPixel.astro";
import Newsletter from "../components/Newsletter.astro";
import Stickybutton from "../components/Stickybutton.astro";
---

<MainLayout title="PIXEL">

  <!-- HEROSECTION MED ID -->
<Herosection id="herosection"></Herosection>
  <Stickybutton></Stickybutton>
  <Pixel></Pixel>

  <section id="meet-the-artists">
  <h2 class=" mt-40 mx-[15px] md:mx-0 ">
    MEET THE ARTISTS
  </h2>
</section>
 
<div class="mx-[15px] md:mx-0">
  <ArtistCard image={viola_rama} name="Viola Rama" date="27. June" time="10:00 - 17:00">
    <div slot="description">
      <p>
        Viola Rama is a contemporary artist working with photography and artificial intelligence (AI) to create surreal portraits that challenge the boundaries between the human and the digital. Her works combine technology and aesthetics in a way that both fascinates and provokes, as she explores new ways of viewing identity and the body through digital manipulation.
      </p>
      <p class="mt-5">
        Check out their{" "}
        <a
          href="https://www.instagram.com/violaorama/"
          target="_blank"
          rel="noopener noreferrer"
          class="underline decoration-black"
        >
          Instagram
        </a>
      </p>
    </div>
  </ArtistCard>
</div>


<div class="mx-[15px] md:mx-0">
  <ArtistCard
    image={bradon_morse}
    name="Brandon Morse"
    date="28. June"
    time="10:00 - 17:00"
    reverse={true}
  >
    <div slot="description">
      <p>
        Brandon Morse is an American artist who primarily works with video installations and generative art. His digital works are characterized by complex, algorithmic structures created through coding and real-time generation. Morse's pieces often focus on themes such as time, decay, and transformation, visualized through abstract digital landscapes.
      </p>
      <p class="mt-5">
        Check out their{" "}
        <a
          href="https://www.instagram.com/e_brandon_morse/"
          target="_blank"
          rel="noopener noreferrer"
          class="underline decoration-black"
        >
          Instagram
        </a>
      </p>
    </div>
  </ArtistCard>
</div>


<div class="mx-[15px] md:mx-0">
  <ArtistCard
    image={danielle}
    name="Danielle Brathwaite-Shirley"
    date="29. June"
    time="10:00 - 17:00"
  >
    <div slot="description">
      <p>
        Danielle Brathwaite-Shirley is a British artist working with digital media, including interactive games, video installations, and animation. Her work focuses on retelling the stories of Black trans people through technology, inviting audiences to interact with her digital worlds. Her artworks create space for inclusion and challenge the way we think about identity and technology.
      </p>
      <p  class="mt-5">
        Check out their{" "}
        <a
          href="https://www.instagram.com/ladydangfua/?hl=en"
          target="_blank"
          rel="noopener noreferrer"
          class="underline decoration-black"
        >
          Instagram
        </a>
      </p>
    </div>
  </ArtistCard>
</div>


<section id="what-is-pixel">
  <WhatIsPixel />
</section>
<ApartofPixel></ApartofPixel>
<Billedegalleri></Billedegalleri>
<Newsletter></Newsletter>

</MainLayout>

<style>
  @import url("https://use.typekit.net/ctz4zoo.css");
</style>
