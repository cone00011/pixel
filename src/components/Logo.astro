---
import Alpine from 'alpinejs';
---


<section
  x-data="{ mouseX: 0, mouseY: 0, isHovering: false }" 
  @mousemove.window="mouseX = $event.clientX; mouseY = $event.clientY"
  class="relative select-none">
  
  <!-- Custom Cursor -->
  <div 
    x-show="isHovering" 
    :style="{ left: mouseX + 'px', top: mouseY + 'px' }" 
    class="fixed pointer-events-none text-black text-[20px] z-50">
    PIXEL
  </div>

  <!-- Sticky Logo -->
  <div class="fixed top-1 left-95 lg:top-5 lg:left-10 z-50">
    <a href="/" @mouseenter="isHovering = true" @mouseleave="isHovering = false" class="cursor-none">
      <h1 class="font-catavalo text-[40px] lg:text-[60px]">
        PIXEL
      </h1>
    </a>
  </div>
</section>

