---
export interface Props {
  image: ImageMetadata;
  name: string;
  date: string;
  description: string;
  reverse?: boolean;
}

const { image, name, date, description, reverse = false } = Astro.props;

// Brug condition til at s√¶tte orden og placering
const textOrder = reverse ? 'order-2 md:order-1' : 'order-2 md:order-2';
const imageOrder = reverse ? 'order-1 md:order-2' : 'order-1 md:order-1';
const textCol = reverse ? 'md:col-span-7' : 'md:col-span-7';
const imageCol = reverse ? 'md:col-span-5' : 'md:col-span-5';
---

<div class="grid grid-cols-1 md:grid-cols-12 gap-6 py-12 items-start md:items-center font-prestige-elite-std">
  <!-- Tekst -->
  <div class={`col-span-1 ${textCol} ${textOrder}`}>
    <h3 class=" mb-4">{date}</h2>
    <p class=" leading-relaxed max-w-prose">
      {description}
    </p>
  </div>

  <!-- Billede -->
  <div class={`col-span-1 ${imageCol} ${imageOrder} flex justify-center`}>
    <img src={image.src} alt={name} class="w-full max-w-sm object-contain" />
  </div>
</div>

