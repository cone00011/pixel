<div class="pixel-bg fixed top-[200px] left-0 w-full h-screen z-[-1] pointer-events-none">
  <div class="w-full h-full flex justify-center items-start px-[15px] md:px-[20px] xl:pr-[210px] xl:pl-[80px]">
    <h1
      id="pixel-text"
      class="text-[20vw] sm:text-[25vw] font-catavalo opacity-0 transition-opacity duration-200 select-none leading-none tracking-tight blur-[5px] w-full text-center"
    >
      PIXEL
    </h1>
  </div>
</div>

<script is:inline>
  function updatePixelVisibility() {
    const pixel = document.getElementById("pixel-text");
    const header = document.getElementById("header");
    const footer = document.getElementById("footer");

    if (!pixel || !header || !footer) return;

    const pixelMid = window.innerHeight / 2;

    const headerBottom = header.getBoundingClientRect().bottom;
    const footerTop = footer.getBoundingClientRect().top;

    const isAfterHeader = headerBottom < pixelMid;
    const isBeforeFooter = footerTop > pixelMid;

    pixel.style.opacity = (isAfterHeader && isBeforeFooter) ? "0.2" : "0";
  }

  window.addEventListener("scroll", updatePixelVisibility);
  window.addEventListener("resize", updatePixelVisibility);
  window.addEventListener("load", updatePixelVisibility);
</script>




