<div class="pixel-bg fixed left-0 top-0 w-full h-screen z-[-1] pointer-events-none">
  <div class="w-full h-full flex justify-center items-start">
    <h1 class="text-[20vw] font-catavalo opacity-20 select-none leading-none tracking-tight blur-[5px]">
      PIXEL
    </h1>
  </div>
</div>

<script is:inline>
  function updatePixelPosition() {
    const header = document.getElementById("header");
    const pixelBg = document.querySelector(".pixel-bg");
    if (!header || !pixelBg) return;

    const headerHeight = header.offsetHeight;
    pixelBg.style.top = `${headerHeight}px`;
    pixelBg.style.height = `calc(100vh - ${headerHeight}px)`;
  }

  window.addEventListener("load", updatePixelPosition);
  window.addEventListener("resize", updatePixelPosition);
</script>

