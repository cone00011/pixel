<section 
  x-data="{ mouseX: 0, mouseY: 0, isHovering: false }" 
  @mousemove.window="mouseX = $event.clientX; mouseY = $event.clientY"
  class="relative text-[100px] ml-20 mt-20 select-none font-catavalo">

  <!-- Custom Cursor -->
  <div 
    x-show="isHovering" 
    :style="{ left: mouseX + 'px', top: mouseY + 'px' }" 
    class="fixed pointer-events-none text-black text-[20px] z-50">
    PIXEL
  </div>

  <!-- Tekst der skal have hover-effekt -->
  <h1 
    @mouseenter="isHovering = true" 
    @mouseleave="isHovering = false" 
    class="blur-sm hover:blur-none transition duration-200 cursor-none">
    PIXEL
  </h1>
  <h1 
    @mouseenter="isHovering = true" 
    @mouseleave="isHovering = false" 
    class="blur-sm hover:blur-none transition duration-200 cursor-none">
    DIGITAL ART FESTIVAL
  </h1>
  <h1 
    @mouseenter="isHovering = true" 
    @mouseleave="isHovering = false" 
    class="blur-sm hover:blur-none transition duration-200 cursor-none">
    27 - 29 JUNE
  </h1>
