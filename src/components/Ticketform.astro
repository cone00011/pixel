---
// TicketForm.astro
import Button from "./Button.astro"
---

<form x-data="{ selected: '' }" class="max-w-3xl mx-auto p-10 lg:p-20 border border-black font-mono text-[16px]" x-cloak>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-10 mb-10">
    <div>
      <label for="name" class="block mb-2 font-prestige-elite-std">Name</label>
      <input id="name" type="text" placeholder="" class="w-full border border-black rounded-[15px] px-4 py-2" />
    </div>
    <div>
      <label for="email" class="block mb-2 font-prestige-elite-std">E-mail</label>
      <input id="email" type="email" placeholder="" class="w-full border border-black rounded-[15px] px-4 py-2" />
    </div>
    <div>
      <label for="phone" class="block mb-2 font-prestige-elite-std">Phone</label>
      <input id="phone" type="tel" placeholder="" class="w-full border border-black rounded-[15px] px-4 py-2" />
    </div>
    <div>
      <label for="address" class="block mb-2 font-prestige-elite-std">Address</label>
      <input id="address" type="text" placeholder="" class="w-full border border-black rounded-[15px] px-4 py-2" />
    </div>
  </div>

  <div class="mb-15">
    <p class="mb-2 font-prestige-elite-std">Choose your ticket</p>
    <div class="flex flex-col md:flex-row gap-4">

      <!-- FULL WEEKEND -->
      <button
        type="button"
        @click="selected = 'full'"
        :class="selected === 'full' ? 'bg-black text-white' : 'bg-white text-black'"
        class="w-full md:w-auto border border-black rounded-[15px] px-6 py-2 italic font-prestige-elite-std transition"
      >
        FULL WEEKEND
      </button>

      <!-- MIX & MATCH -->
      <div class="relative w-full md:w-auto font-prestige-elite-std">
        <select
          @change="selected = 'mix'"
          :class="selected === 'mix' ? 'bg-black text-white' : 'bg-white text-black'"
          class="w-full border border-black rounded-[15px] px-6 py-2 italic cursor-pointer pr-10 transition
                 appearance-none bg-no-repeat bg-right bg-[length:0] focus:outline-none"
        >
          <option disabled selected>MIX & MATCH</option>
          <option>Friday & Saturday</option>
          <option>Friday & Sunday</option>
          <option>Saturday & Sunday</option>
        </select>
        <div class="pointer-events-none absolute right-4 top-1/2 transform -translate-y-1/2 text-black">▼</div>
      </div>

      <!-- ONE DAY -->
      <div class="relative w-full md:w-auto font-prestige-elite-std">
        <select
          @change="selected = 'one'"
          :class="selected === 'one' ? 'bg-black text-white' : 'bg-white text-black'"
          class="w-full border border-black rounded-[15px] px-6 py-2 italic cursor-pointer pr-10 transition
                 appearance-none bg-no-repeat bg-right bg-[length:0] focus:outline-none"
        >
          <option disabled selected>ONE DAY</option>
          <option>Friday</option>
          <option>Saturday</option>
          <option>Sunday</option>
        </select>
        <div class="pointer-events-none absolute right-4 top-1/2 transform -translate-y-1/2 text-black">▼</div>
      </div>

    </div>
  </div>

  <div class="mb-10 lg:mb-20 space-y-4">
    <label class="flex items-center space-x-3">
      <input type="checkbox" class="border border-black rounded" />
      <span class="italic font-prestige-elite-std">I agree that <span class="not-italic font-semibold font-prestige-elite-std">PIXEL</span> can send me promotional emails</span>
    </label>
    <label class="flex items-center space-x-3">
      <input type="checkbox" class="border border-black rounded" />
      <span class="italic font-prestige-elite-std">I have read <a href="#" class="underline font-prestige-elite-std">Terms & Conditions</a></span>
    </label>
  </div>

  <div class="text-center mt-10">
    <Button>Go to checkout</Button>
  </div>
</form>

  